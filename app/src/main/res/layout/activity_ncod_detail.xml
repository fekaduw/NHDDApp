    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="sticky"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:background="@drawable/appbar_gradient_background"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/detail_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/appbar_gradient_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout8">

        <ImageView
            android:id="@+id/concept_icon"
            android:layout_width="@dimen/detail_top_icon_size"
            android:layout_height="@dimen/detail_top_icon_size"
            android:gravity="center"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/detail_icon_text_size"
            app:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/title_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/detail_view_padding"
            android:paddingBottom="@dimen/detail_view_padding"
            android:paddingTop="@dimen/detail_view_padding"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:fontFamily="@font/hind" />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="?attr/backgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_header">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal">

            <ImageView
                android:layout_width="@dimen/detail_view_icon_size"
                android:layout_height="@dimen/detail_view_icon_size"
                android:layout_marginLeft="@dimen/detail_view_padding"
                android:layout_marginTop="@dimen/detail_view_icon_margin_top"
                app:srcCompat="@drawable/ic_category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/detail_view_label_padding_bottom"
                android:paddingLeft="@dimen/detail_view_label_padding_left"
                android:paddingTop="@dimen/detail_view_padding"
                android:text="Category"
                android:textAllCaps="true"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/detail_header_font_size"
                android:textStyle="bold"
                app:fontFamily="@font/hind" />
        </RelativeLayout>

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/detail_view_padding"
            android:paddingLeft="@dimen/detail_view_label_padding_left"
            android:text="@string/pref_description_social_recommendations"
            android:textColor="?attr/mainTextColor"
            android:textSize="@dimen/detail_value_font_size"
            app:fontFamily="sans-serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_view_divider_line_height"
            android:layout_marginLeft="@dimen/detail_line_margin_left"
            android:background="?attr/dividerLineColor" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal">

            <ImageView
                android:layout_width="@dimen/detail_view_icon_size"
                android:layout_height="@dimen/detail_view_icon_size"
                android:layout_marginLeft="@dimen/detail_view_padding"
                android:layout_marginTop="@dimen/detail_view_icon_margin_top"
                app:srcCompat="@drawable/ic_description_detail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/detail_view_label_padding_bottom"
                android:paddingLeft="@dimen/detail_view_label_padding_left"
                android:paddingTop="@dimen/detail_view_padding"
                android:text="Description"
                android:textAllCaps="true"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/detail_header_font_size"
                android:textStyle="bold"
                app:fontFamily="@font/hind" />
        </RelativeLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/detail_view_padding"
            android:paddingLeft="@dimen/detail_view_label_padding_left"
            android:text="@string/pref_description_social_recommendations"
            android:textColor="?attr/mainTextColor"
            android:textSize="@dimen/detail_value_font_size"
            app:fontFamily="sans-serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_view_divider_line_height"
            android:layout_marginLeft="@dimen/detail_line_margin_left"
            android:background="?attr/dividerLineColor" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal">

            <ImageView
                android:layout_width="@dimen/detail_view_icon_size"
                android:layout_height="@dimen/detail_view_icon_size"
                android:layout_marginLeft="@dimen/detail_view_padding"
                android:layout_marginTop="@dimen/detail_view_icon_margin_top"
                app:srcCompat="@drawable/ic_class_detail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/detail_view_label_padding_bottom"
                android:paddingLeft="@dimen/detail_view_label_padding_left"
                android:paddingTop="@dimen/detail_view_padding"
                android:text="Class"
                android:textAllCaps="true"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/detail_header_font_size"
                android:textStyle="bold"
                app:fontFamily="@font/hind" />
        </RelativeLayout>

        <TextView
            android:id="@+id/class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/detail_view_padding"
            android:paddingLeft="@dimen/detail_view_label_padding_left"
            android:text="Diagnosis"
            android:textColor="?attr/mainTextColor"
            android:textSize="@dimen/detail_value_font_size"
            app:fontFamily="sans-serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_view_divider_line_height"
            android:layout_marginLeft="@dimen/detail_line_margin_left"
            android:background="?attr/dividerLineColor" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal">

            <ImageView
                android:layout_width="@dimen/detail_view_icon_size"
                android:layout_height="@dimen/detail_view_icon_size"
                android:layout_marginLeft="@dimen/detail_view_padding"
                android:layout_marginTop="@dimen/detail_view_icon_margin_top"
                app:srcCompat="@drawable/ic_version_createdon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/detail_view_label_padding_bottom"
                android:paddingLeft="@dimen/detail_view_label_padding_left"
                android:paddingTop="@dimen/detail_view_padding"
                android:text="Version created on"
                android:textAllCaps="true"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/detail_header_font_size"
                android:textStyle="bold"
                app:fontFamily="@font/hind" />
        </RelativeLayout>

        <TextView
            android:id="@+id/version_created_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/detail_view_padding"
            android:paddingLeft="@dimen/detail_view_label_padding_left"
            android:text="Diagnosis"
            android:textColor="?attr/mainTextColor"
            android:textSize="@dimen/detail_value_font_size"
            app:fontFamily="sans-serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_view_divider_line_height"
            android:layout_marginLeft="@dimen/detail_line_margin_left"
            android:background="?attr/dividerLineColor" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal">

            <ImageView
                android:layout_width="@dimen/detail_view_icon_size"
                android:layout_height="@dimen/detail_view_icon_size"
                android:layout_marginLeft="@dimen/detail_view_padding"
                android:layout_marginTop="@dimen/detail_view_icon_margin_top"
                app:srcCompat="@drawable/ic_version" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/detail_view_label_padding_bottom"
                android:paddingLeft="@dimen/detail_view_label_padding_left"
                android:paddingTop="@dimen/detail_view_padding"
                android:text="Version"
                android:textAllCaps="true"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/detail_header_font_size"
                android:textStyle="bold"
                app:fontFamily="@font/hind" />
        </RelativeLayout>

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/detail_view_label_padding_left"
            android:text="Latest version"
            android:textColor="?attr/mainTextColor"
            android:textSize="@dimen/detail_value_font_size"
            app:fontFamily="sans-serif" />
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <!--
            </RelativeLayout>-->
    <!--
        </android.support.design.widget.CoordinatorLayout>
-->
