<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/backgroundColor"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/appbar_gradient_background"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/fmon_logo" />

    <LinearLayout
        android:id="@+id/logo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/app_name_nhdd"
            android:textColor="?attr/textColor"
            android:textSize="45sp"
            app:fontFamily="@font/paytone_one" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_pocket"
            android:textColor="?attr/textColor"
            android:textSize="45sp"
            app:fontFamily="@font/cairo" />
    </LinearLayout>

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_info"
        android:textColor="?attr/tintColor"
        android:padding="20dp"
        android:textSize="15sp"
        app:fontFamily="@font/cairo"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"/>

    <ProgressBar
        android:id="@+id/update_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/update_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="?attr/statusColor"
        android:textSize="15sp"
        app:fontFamily="@font/cairo"
        android:layout_marginTop="50dp"
        android:paddingBottom="30dp"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="?attr/buttonColor"
        android:textAlignment="center"
        android:text="@string/btn_update"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/internet_status"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="?attr/noInternetConnTextColor"
        android:background="?attr/noInternetConnBackgroundColor"
        android:visibility="gone"
        android:text="No Internet connection"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>